---
import Section from './Section.astro';
import TextLink from '@components/TextLink.astro';

interface Props {
  qualifications: {
    name: string;
    url: string;
  }[];
  class?: string;
}

const { qualifications, class: className, ...rest } = Astro.props;
---

<Section class={className} {...rest}>
  <Fragment slot="title">Qualifications</Fragment>
  <Fragment slot="default">
    {
      qualifications.map(({ name, url }) => (
        <TextLink href={url}>{name}</TextLink>
      ))
    }
  </Fragment>
</Section>
